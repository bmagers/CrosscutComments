<!-- navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand" href="/">Crosscut Comments</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <button type="button" class="btn btn-outline-success btn home" onclick="location.href='/'">Home</button>
      </li>
      <li class="nav-item">
        <button type="button" class="btn btn-outline-success btn saved" onclick="location.href='/saved'">Saved Articles</button>
      </li>
      <li class="nav-item">
        <button type="button" class="btn btn-outline-success btn scrape">Scrape New Articles</button>
      </li>
    </ul>
  </div>
</nav>

<!-- articles -->
<div class="content">
{{#each articles}}
  <h2><a href="https://crosscut.com{{this.url}}">{{this.headline}}</a></h2>
  <p>{{this.date}} &mdash; {{this.summary}}</p>
  {{#if this.saved}}
    <button type="button" class="btn btn-outline-success btn-sm notes" data-article="{{this.article}}" data-toggle="modal" data-target="#articleModal">Article Comments</button>
    <button type="button" class="btn btn-outline-danger btn-sm save" data-article="{{this.article}}" data-saved="{{this.saved}}">Remove from Saved</button>
  {{else}}
    <button type="button" class="btn btn-outline-primary btn-sm save" data-article="{{this.article}}" data-saved="{{this.saved}}">Save Article</button>
  {{/if}}
  <hr>
{{/each}}
</div>

<!-- modal -->
<div class="modal fade" id="articleModal" tabindex="-1" role="dialog" aria-labelledby="articleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="articleModalLabel"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>We'll put existing notes here.</p>
        <textarea rows="5" cols="55" placeholder="Enter a comment."></textarea>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-outline-primary btn-sm saveNote">Save Comment</button>
      </div>
    </div>
  </div>
</div>